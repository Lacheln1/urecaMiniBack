<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.blog.velog.dao">

  
  <insert id="insertPost" parameterType="Post">
  	insert into post(title,content,authorId,tags,imageUrl,likes) values(#{title}, #{content}, #{authorId},#{tags},#{imageUrl},#{likes})
  </insert>
  
  <update id = "updatePost" parameterType="Post">
  	update post set id=#{id} where title=#{title} and content=#{content} and tags=#{tags} and imageUrl=#{imageUrl}
  </update>
  
  <delete id="deletePost" parameterType="Long">
  	 delete from post where id = #{id}
  </delete>
</mapper>