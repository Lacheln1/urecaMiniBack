<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.blog.velog.dao.PostDao">

    <select id="getAllPosts" resultType="com.blog.velog.dto.Post">
        SELECT * FROM post
    </select>

    <select id="getPostDetail" parameterType="java.lang.Long">
        SELECT * FROM post WHERE id = #{id}
    </select>

    <insert id="insertPost" parameterType="com.blog.velog.dto.Post">
        INSERT INTO post(title, content, username, tags, image_url)
        VALUES (#{title}, #{content}, #{username}, #{tags}, #{imageUrl})
    </insert>

    <update id="updatePost" parameterType="com.blog.velog.dto.Post">
        UPDATE post
        SET title = #{title}, content = #{content}, tags = #{tags}, image_url = #{imageUrl}
        WHERE id = #{id}
    </update>

    <delete id="deletePost" parameterType="java.lang.Long">
        DELETE FROM post WHERE id = #{id}
    </delete>

</mapper>
